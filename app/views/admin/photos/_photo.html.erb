<tr>
  <td>
    <%= link_to image_tag(photo.image.url(:thumbnail)), photo.image.url(:large) %>
  </td>
  <td>
    <%= photo.title %>
  </td>
  <td>
    <% if photo.approved? %>
      Approved
    <% else %>
      <%= button_to "Approve", admin_photo_path(photo, :photo => { :approved => true }), { :method => :put } %>
    <% end %>
  </td>
  <td>
    <%= button_to "Delete", admin_photo_path(photo), :method => :delete, :confirm => "Are you sure you want to delete this photo?" %>
  </td>
</tr>