  <%= trap_door_field %>
	<ol>
		<li>
			<%= form.label :author, "Name:" %>
			<%= form.text_field :author %>
		</li>
		<li>
			<%= form.label :email, "Email: (will not be shown)" %>
			<%= form.text_field :email %>
		</li>
		<li>
			<%= form.label :comment, "Comment" %>
			<%= form.text_area :body %>
		</li>
		<li>
			<%= form.hidden_field :commentable_type, :value => commentable.type if commentable %>
			<%= form.hidden_field :commentable_id, :value => commentable.id if commentable %>
			<%= form.submit "Submit" %>
		</li>
	</ol>